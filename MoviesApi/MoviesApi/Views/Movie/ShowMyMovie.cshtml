<body>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" style="color:white">Movie</th>
                <th scope="col" style="color:white">Year</th>
                <th scope="col" style="color:white">Added on date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color:white">
                        @item.Title
                    </td>
                    <td style="color:white">
                        @item.Year
                    </td>
                    <td style="color:white">
                        @item.AddOn.ToShortDateString();
                    </td>
                    <td>
                        <button class="btn btn-info" style="font-size:24px" onclick="ReviewedMovie(@item.Id)">
                            Reviewed <i class="fa fa-eye"></i>
                        </button>
                    </td>
                    <td>
                        <span class="fa fa-star checked" style="color:yellow"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-info" onclick="GoHome()">Home</button>
</body>
